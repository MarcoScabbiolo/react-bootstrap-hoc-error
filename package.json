{
  "name": "react-bootstrap-hoc-error",
  "version": "0.1.1",
  "description": "HOC to display errors related to a component",
  "homepage": "",
  "author": {
    "name": "Marco Scabbiolo",
    "email": "scabbiolo.marco@gmail.com",
    "url": ""
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": ["react", "boostrap", "hoc", "error", "global"],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0"
  },
  "scripts": {
    "prepublish": "nsp check && npm run dist",
    "pretest": "eslint . --fix",
    "precommit": "lint-staged",
    "dist": "babel src --out-dir lib --ignore src/__tests__",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["xo", "prettier", "plugin:react/recommended"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "MarcoScabbiolo/react-bootstrap-hoc-error",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "react": "^16.2.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.2.0"
  }
}
